<Window x:Class="CalcUtilyServic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Расчет коммунальных услуг" Height="580" Width="540"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
          Background="#F0F0F0">

    <Window.Resources>
        <!-- Стиль для TextBlock (меток) -->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,3,0,10"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Стиль для CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Стиль для кнопки -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#397d3a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Расчет платы за коммунальные услуги"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#333"
                   
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Количество проживающих -->
                
                <GroupBox Header="Количество проживающих" Margin="0,0,0,15" Padding="10">
                    
                    <StackPanel>
                        <CheckBox x:Name="УчитыватьЖителейCheckBox"
                          Content="Учитывать количество проживающих"
                          Margin="0,10,0,5"
                          Checked="УчитыватьЖителейCheckBox_Checked"
                          Unchecked="УчитыватьЖителейCheckBox_Unchecked"/>
                        <TextBlock Text="С 1 по 15 число:"/>
                        <TextBox x:Name="txtResidentsFirstHalf" Margin="0,0,0,10" />

                        <TextBlock Text="С 16 по 31 число:"/>
                        <TextBox x:Name="txtResidentsSecondHalf" />
                             

                       
                    </StackPanel>
                </GroupBox>


                <!-- ХВС -->
                <GroupBox Header="Холодное водоснабжение (ХВС)" Margin="0,0,0,15" Padding="10">
                    <Grid Margin="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Name="chkHwsHasMeter" Content="Есть прибор учета" Grid.ColumnSpan="2" IsChecked="True"/>

                        <TextBlock Text="Предыдущее:" Grid.Row="1" Grid.Column="0" Margin="0,8,5,0"/>
                        <TextBox Name="txtHwsPrev" Grid.Row="1" Grid.Column="1" />

                        <TextBlock Text="Текущее:" Grid.Row="2" Grid.Column="0" Margin="0,8,5,0"/>
                        <TextBox Name="txtHwsCurr" Grid.Row="2" Grid.Column="1" />
                    </Grid>
                </GroupBox>

                <!-- ГВС -->
                <GroupBox Header="Горячее водоснабжение (ГВС)" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Name="chkGwsHasMeter" Content="Есть прибор учета" Grid.ColumnSpan="2" IsChecked="True"/>

                        <TextBlock Text="Предыдущее:" Grid.Row="1" Grid.Column="0" Margin="0,8,5,0"/>
                        <TextBox Name="txtGwsPrev" Grid.Row="1" Grid.Column="1" />

                        <TextBlock Text="Текущее:" Grid.Row="2" Grid.Column="0" Margin="0,8,5,0"/>
                        <TextBox Name="txtGwsCurr" Grid.Row="2" Grid.Column="1" />
                    </Grid>
                </GroupBox>

                <!-- Электроэнергия -->
                <GroupBox Header="Электроэнергия" Padding="10">
                    <StackPanel>
                        <CheckBox Name="chkElecHasMeter" Content="Есть прибор учета" IsChecked="True" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Предыдущее (день):" Grid.Row="0" Grid.Column="0" Margin="0,8,5,0"/>
                            <TextBox Name="txtEdPrev" Grid.Row="0" Grid.Column="1" />

                            <TextBlock Text="Текущее (день):" Grid.Row="0" Grid.Column="2" Margin="20,8,5,0"/>
                            <TextBox Name="txtEdCurr" Grid.Row="0" Grid.Column="3" />

                            <TextBlock Text="Предыдущее (ночь):" Grid.Row="1" Grid.Column="0" Margin="0,8,5,0"/>
                            <TextBox Name="txtEnPrev" Grid.Row="1" Grid.Column="1" />

                            <TextBlock Text="Текущее (ночь):" Grid.Row="1" Grid.Column="2" Margin="20,8,5,0"/>
                            <TextBox Name="txtEnCurr" Grid.Row="1" Grid.Column="3" />
                        </Grid>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="История расчетов" Margin="0,10,0,0" Padding="10">
                    <DataGrid x:Name="dgHistory" AutoGenerateColumns="True" Height="150" />
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Рассчитать" Click="BtnCalculate_Click"/>
            <TextBlock Name="txtResult" Margin="0,15,0,0" FontSize="16" FontWeight="Bold" Foreground="#333" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
